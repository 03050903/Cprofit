<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layout_root"

   >
    <include
        layout="@layout/include_header"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_bar"
        app:layout_constraintRight_toLeftOf="@id/br_limit"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="股票:"
        android:id="@+id/tv_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:id="@+id/et_stock_name"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/tv_stock_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_stock_name"
        app:layout_constraintLeft_toRightOf="@id/br_limit"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/tv_stock_name"
        app:layout_constraintRight_toLeftOf="@id/br_limit"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_name"
        android:textSize="16sp"
        android:padding="16dp"
        android:gravity="center"
        android:text="代码123:"
        android:id="@+id/tv_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:id="@+id/et_stock_code"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/tv_stock_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_stock_code"
        app:layout_constraintLeft_toRightOf="@+id/br_limit"/>
    <androidx.constraintlayout.widget.Barrier
        app:barrierDirection="right"
        android:id="@+id/br_limit"
        app:constraint_referenced_ids="tv_stock_name,tv_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>